@{
}
@model WebApplication1.Controllers.HomeController.IndexViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
</head>
<body>
    <p>Книжный магазин</p>
    <label for="search">Поиск</label>


    @using (Html.BeginForm("PublisherCreate", "Home", FormMethod.Post))
    {
       <input type="text" name="name"> 
       <input type="submit" value="добавить издательство">
    }

    @using (Html.BeginForm("PublisherDelete", "Home", FormMethod.Post))
    {
        <select name="id">
            @foreach(var publisher in Model.publishers)
            {
                <option value="@publisher.Id">@publisher.Name</option>
            }
        </select>
        <input type="submit" value="добавить издательство">
    }
    

                
    

</body>
</html>